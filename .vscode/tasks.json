{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "swift-build",
            "type": "shell",
            "command": "swift build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "swift-build-tests",
            "type": "shell",
            "command": "swift build --build-tests",
            "group": "build"
        },
        {
            "label": "swift-test",
            "type": "shell",
            "command": "swift test",
            "group": "test"
        }
    ]
}